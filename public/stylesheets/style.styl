//@import global.styl

body
  font 12px Helvetica, Arial, sans-serif
  padding 0
  margin 0

a.button
  color #00b7ff

nav
  list-style none
  margin 0
  padding 0

nav li
  display inline

nav a
  display inline-block
  padding 25px 15px
  font-size 20px
  text-decoration none
  color #444

p
  width 200px

/*
 * Header and Footer
 */
header, footer
  width 100%
  background #fff
  z-index 150
  position fixed

header
  height 100px

footer
  text-align center
  bottom 0
  height 20px
  padding 10px

/*
 * Site Wrapper
 */
.site-wrapper
  width 960px
  margin 0 auto

/*
 * Content
 */
.content
  margin 100px 0px 20px 0px

/*
 * Site Name
 */
.site-name
  padding 25px 0
  font-family Calibri Segoe UI, Arial, Sans-Serif
  font-size 35px

/*
 * Site nav bar
 */
.site-nav
  float right

/*
 * Shadow
 */
.shadow-underline
  -moz-box-shadow    0px 4px 3px 0px #ccc
  -webkit-box-shadow 0px 4px 3px 0px #ccc
  box-shadow         0px 4px 3px 0px #ccc

.shadow-overline
  -moz-box-shadow    0px -4px 3px 0px #ccc
  -webkit-box-shadow 0px -4px 3px 0px #ccc
  box-shadow         0px -4px 3px 0px #ccc
