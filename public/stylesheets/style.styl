
body
  font 12px Helvetica, Arial, sans-serif
  padding 0
  margin 0

a.button
  color #00b7ff

nav
  list-style none
  margin 0
  padding 0

nav li
  display inline

nav a
  display inline-block
  padding 15px
  font-size 20px
  text-decoration none
  color #444

/*
 * Content
 */
.content
  margin 0px 5px

/*
 * Shadow
 */
.shadow-underline
  -moz-box-shadow    0px 4px 3px 0px #ccc
  -webkit-box-shadow 0px 4px 3px 0px #ccc
  box-shadow         0px 4px 3px 0px #ccc

/*
 * Site Name
 */
.site-name
  font-family Calibri Segoe UI, Arial, Sans-Serif
  font-size 35px
