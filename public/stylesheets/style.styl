//@import global.styl

nav
  z-index 100

/*
 * The experience dates
 */
.subtext
  font-size 10px

.active-btn
  color #333
  background-color #e6e6e6
  border-color #adadad

/*
 * Github Fork Me Ribbon
 */
#github-ribbon
  position fixed
  top 50px
  left 0px
  border 0px
  
/*
 * StackOverflow Flair
 */
#stackoverflow-flair
  display inline
  margin 10px
  float right

.fill
  display flex
  justify-content center
  align-items center
  overflow hidden
  max-height 500px

.fill img
  flex-shrink 0%
  min-width 100%
  min-height 100%

.body
  margin-top 80px

.text-page
  margin-bottom 150px

.nav-tabs
  border-bottom none

.project-img
  max-width 800px
  max-height auto

.experience-icon
  height 20px
  width auto
  margin-right 10px

@media (max-width: 1300px)
  body
    font-size 10px

  .btn
    font-size 10px

  body span
    font-size 12px

  body h1
    font-size 30px

  body h2
    font-size 24px

  body h3
    font-size 18px

  body h4
    font-size 16px

  body h5
    font-size 14px

  .container .jumbotron
    padding 0px

  .jumbotron
    margin 0px
    padding 10px
    background-color #fff

  .jumbotron h1
    font-size 30px


/*
 * About Affix
 */
#about-affix
  margin-top 70px
  margin-left 30px

#about-affix a
  color gray

#about-affix li
  margin-left 10px

#about-affix a:hover
  background none

#about-affix>ul>li.active>a, #about-affix>ul>li.active>ul>li.active
  border-left 2px solid gray

#about-affix.affix
  position fixed
  top 0px 
  width 100%
