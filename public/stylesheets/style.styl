
body
  font 12px Helvetica, Arial, sans-serif
  padding 0
  margin 0

a.button
  color #00b7ff

nav
  list-style none
  margin 0
  padding 0

nav li
  display inline

nav a
  display inline-block
  padding 15px
  font-size 20px
  text-decoration none
  color #444

footer
  margin 40px 10px 10px 10px
  text-align center

p
  width 150px

/*
 * Content
 */
.content
  margin 0px 5px

/*
 * Header for the whole site
 */
.site-header
  padding 5px
  text-align center
  background-color #222
  z-index 99

/*
 * Site Name
 */
.site-name
  font-family Calibri Segoe UI, Arial, Sans-Serif
  font-size 35px
  padding 15px
  margin 0 50px 0 0
  display inline-block

/*
 * Site nav bar
 */
.site-nav
  display inline-block

/*
 * Shadow
 */
.shadow-underline
  -moz-box-shadow    0px 4px 3px 0px #ccc
  -webkit-box-shadow 0px 4px 3px 0px #ccc
  box-shadow         0px 4px 3px 0px #ccc
